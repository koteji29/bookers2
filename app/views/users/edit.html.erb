<!-- 自分のプロフィール編集 -->
<div>
  <%= flash[:notice] %>
</div>
<%= render "devise/shared/error_messages", resource: @user %>
<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class = "form-group">
        <label for="inputName">Name</label>
        <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></p>
      </div>
      <div class = "form-group">
        <label for="inputName">Image</label>
        <p><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></p>
      </div>
      <div class = "form-group">
        <label for="inputName">Introduction</label>
        <p><%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:""%></p>
        <div class="form-group">
          <%= f.submit 'Update User', class: 'btn btn-secondary' %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>